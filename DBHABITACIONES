CREATE TABLE HABITACIONES
(NO_HABITACION INT PRIMARY KEY NOT NULL,
HOTEL VARCHAR(250) NOT NULL,
TIPO NVARCHAR(20) NOT NULL,
COSTO DECIMAL NOT NULL)

CREATE TABLE CLIENTES
(ID_CLIENTE INT PRIMARY KEY NOT NULL,
NOMBRE NVARCHAR(250) NOT NULL,
CORREO NVARCHAR(250) NOT NULL,
DOMICILIO NVARCHAR(250) NOT NULL,
TELEFONO NVARCHAR(20) NOT NULL)

CREATE TABLE RESERVACION_HOTEL
(NO_RESERVACION_HOTEL INT PRIMARY KEY NOT NULL,
FECHA_ENTRADA DATE NOT NULL,
FECHA_SALIDA DATE NOT NULL,
ID_CLIENTE INT NOT NULL,FOREIGN KEY (ID_CLIENTE) REFERENCES CLIENTES,
NO_HABITACION INT NOT NULL,FOREIGN KEY (NO_HABITACION) REFERENCES HABITACIONES)
